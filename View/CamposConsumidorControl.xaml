<UserControl x:Class="View.CamposConsumidorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="125" d:DesignWidth="320">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Rut:" Margin="10,5"/>
        <Label Content="Nombre:" Margin="10,5" Grid.Row="1"/>
        <Label Content="Correo:" Margin="10,5" Grid.Row="2"/>
        <TextBox x:Name="txtRut" Grid.Column="1" Margin="10,7,14,7" TextWrapping="Wrap"/>
        <TextBox x:Name="txtNombre" Grid.Column="1" Margin="10,7,14,7" Grid.Row="1" TextWrapping="Wrap"/>
        <TextBox x:Name="txtCorreo" Grid.Column="1" Margin="10,7,14,7" Grid.Row="2" TextWrapping="Wrap"/>

    </Grid>
</UserControl>
