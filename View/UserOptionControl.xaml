<UserControl x:Class="View.UserOptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             d:DesignHeight="45" d:DesignWidth="300">
    <Grid>
        <Controls:DropDownButton 
            VerticalContentAlignment="Center"
            DisplayMemberPath="Title" Margin="20,0" Background="{x:Null}" ArrowBrush="{x:Null}">
            <Controls:DropDownButton.Items>
                <StackPanel>
                    <TextBlock Text="Hola"></TextBlock>
                </StackPanel>
            </Controls:DropDownButton.Items>
        </Controls:DropDownButton>
    </Grid>
</UserControl>
